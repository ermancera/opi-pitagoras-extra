body
  & > hr
    margin 30px 0

  div[class^=opi]
    background-size contain
    height 20px
    margin-top -4px
    width 32px

  button, h3, h4, h6, tab-heading
    text-transform uppercase

  cursor default
  padding-top 85px
  user-select none


span, strong
  &.small
    font-size smaller

  &.upper
    text-transform uppercase


.calendar
  table
    height 230px
    width 100%

  td button
    height 30px

  .well
    margin-bottom 10px


.card-info
  padding-bottom 15px


.card-title
  h3
    margin-top 0

  h6, p
    margin 0


.col-xs-1.progress-bar
  padding-right 0


.container
  &.expanded .panel-heading
    display none
    visibility hidden

  &.zoomed
    .panel-collapse.collapse.in
      height 100% !important

  &:not(.zoomed) .panel-collapse > .panel-body > .ng-isolate-scope
    // hack to place tabs at the bottom
    display flex
    flex-direction column-reverse

    & > *
      flex 0 0 auto


.filters
  .col-xs-3
    padding 0

    &:first-child
      padding-left 15px

    &:last-child
      padding-right 15px

  button
    background-color #fff
    border 1px solid #D9E2ED
    color #000
    text-align left
    width 100%

  i.glyphicon
    top 4px

.glyphicon
  padding 0 5px 0 0


.header
  a
    padding 0

    &.wide
      width 100%

  .row
    padding-left 15px

  span
    display block
    padding 9px 0


.header, .order-by
  margin-bottom inherit


.jumbotron
  border-top 2px solid #fa8d7a
  margin-top 15px
  padding inherit !important

  & > .row
    &:first-child
      border-bottom 1px solid lightgrey
      padding 5px 0

    &:nth-child(2)
      padding-top 8px

      h3
        margin-top 0

      h6
        margin-bottom 0

    &:last-child
      padding-bottom 10px

      h6
        margin-top 0

    & > .col-xs-2
      margin-top 7px

    .col-xs-2, .col-xs-5
      text-align center
      //text-transform uppercase

    counter
      font-size 2em

  .progress
    margin-bottom 8px


.legend
    padding 0 17px

  .col-xs-1
    height 15px !important

  .comprometido
    background-color blue

  .devengado
    background-color blue

  .pagado
    background-color blue

  .por-ejercer
    background-color blue


.modal .breadcrumb
  display block


.nav, .pagination, .carousel, .panel-title a
  cursor pointer


.navbar-brand
  padding 8px 0


.order-by
  border-top 2px solid #a5b9ce

  .col-xs-2
    button
      width 50%

    .btn-group
      width 100%

  .row
    padding 7px


.progress
  height 15px !important
  border none !important
  margin-bottom 0

  .progress-bar
    font-size 12px
    line-height inherit !important

  &.small
    margin-bottom inherit !important


.tools
  margin-bottom 15px

  .btn:first-child
    margin-right 10px
