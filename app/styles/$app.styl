//- Common styling (shared by all views)


*[class^=opi]
  background-size contain
  height 20px
  margin-top -4px


accordion, .modal
  .btn-link
    color #74c0ed
    text-decoration underline
    font-size x-small


body
  padding-top 67px

  & > hr
    margin 30px 0


i.fa
  margin 0 2px


.card-title
  h3
    margin-top 0

  h6, p
    margin 0

  p
    margin-top 10px
    text-align right


.container
  &.expanded .panel-heading
    display none
    visibility hidden

  &.zoomed
    .panel-collapse.collapse.in
      height 100% !important


.content
  min-height 240px


.modal .panel > .row
  .col-xs-10, .col-xs-2
    margin 10px 0

.nomar
  margin 0

.nopad
  padding 0

.progress
  margin-top 3px
