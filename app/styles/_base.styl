body
  h3, h4, h6
    text-transform uppercase

  & > hr
    margin 30px 0

  cursor default
  padding-top 85px
  user-select none

.calendar table
  width 100%

.card-info
  padding-bottom 15px
  
  .col-xs-1
    padding-right 0

.card-title
  h3
    margin-top 0

  h6, p
    margin 0

.container
  &.expanded .panel-heading
    display none
    visibility hidden

  &.zoomed
    .panel-collapse.collapse.in
      height 100% !important

  &:not(.zoomed) .panel-collapse > .panel-body > .ng-isolate-scope
    // hack to place tabs at the bottom
    display flex
    flex-direction column-reverse

    & > *
      flex 0 0 auto

  .filters
    .col-xs-3
      padding 0

      &:first-child
        padding-left 15px

      &:last-child
        padding-right 15px

    button
      text-align left
      width 100%

.filters
  i.glyphicon
    top 4px

.header
  .btn-link.btn-xs
    padding 0

  h6
    font-size smaller

.header, .order-by
  margin-bottom inherit

.jumbotron
  border-top 2px solid #fa8d7a
  margin-top 15px
  padding inherit !important

  & > .row
    &:first-child
      border-bottom 1px solid lightgrey
      padding 5px 0

    &:nth-child(2)
      padding-top 8px

      h3
        margin-top 0

      h6
        margin-bottom 0

    &:last-child
      padding-bottom 10px

      h6
        margin-top 0

    & > .col-xs-2
      margin-top 7px

    .col-xs-2, .col-xs-5
      text-align center
      //text-transform uppercase

    span.big
      font-size 2em

.legend
    padding 0 17px

  .col-xs-1
    height 15px !important

  .col-xs-2, .col-xs-5
    font-size x-small
    padding-left 5px

  .comprometido
    background-color blue

  .devengado
    background-color blue

  .pagado
    background-color blue

  .por-ejercer
    background-color blue

.modal .breadcrumb
  display block

.nav, .pagination, .carousel, .panel-title a
  cursor pointer

.order-by
  border-top 2px solid #a5b9ce
  font-size small
  text-transform uppercase

  .row
    padding 7px

.progress
  height 15px !important
  border none !important
  margin-bottom 8px

  .progress-bar
    line-height inherit !important

  &.small
    margin-bottom inherit !important

.tools
  margin-bottom 15px

  .btn:first-child
    margin-right 10px
