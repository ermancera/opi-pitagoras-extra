//- All tools (filters, headers, legends, sort, search, etc.)

.filters
  .col-xs-3
    padding 0

    &:first-child
      padding-left 15px

    &:last-child
      padding-right 15px

  button
    background-color #fff
    border 1px solid #D9E2ED
    color #000
    text-align left
    width 100%

  i.fa
    margin-top 2px


.header
  a
    padding 0

    &.active
      color #74c0ed

    &.wide
      width 100%

  .row
    padding-left 15px

  span
    display block
    padding 9px 0


.header, .order-by
  margin-bottom inherit


.legend
  margin-top 5px
  padding 0 15px

  .col-xs-1
    height 15px !important

    &.progress-bar
      padding-right 0

      & + div
        padding-left 5px


.order-by, .pages
  border-top 2px solid #a5b9ce

  .col-xs-2
    button
      width 50%

    .btn-group
      width 100%

  .col-xs-5
    text-align center

  .row
    padding 7px 5px

  ul.pagination
    margin 0

    a
      padding 4px 0 3px
      text-align center
      width 55px

.pages
  ul
    margin 0

  .col-xs-12
    padding 4px 0 0 0
    text-align center

.tools
  margin-bottom 15px

  .btn:first-child
    margin-right 10px
