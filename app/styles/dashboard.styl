//- Main dashboard

.jumbotron
  border-top 2px solid #fa8d7a
  margin-top 15px
  padding inherit !important

  & > .row
    &:first-child
      border-bottom 1px solid lightgrey
      padding 5px 0

    &:nth-child(2)
      padding-top 8px

      h3
        margin-top 0

      h6
        margin-bottom 0

    &:last-child
      padding-bottom 10px

      h6
        margin-top 0

    & > .col-xs-2
      margin-top 7px

    .col-xs-2, .col-xs-5
      text-align center
      //text-transform uppercase

    counter
      font-size 2em

  .progress
    margin-bottom 8px
