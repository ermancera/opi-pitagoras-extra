// Single activity view



.single
  h3.budget
    margin 0 0 15px 0

  h4
    margin 0

  hr
    margin 30px 0

  p
    line-height 1.15
    text-align justify


  .breadcrumb
    margin 20px 0 15px 0


  .btn-primary, .btn-toolbar, .date-info, h3:not(.budget), h4
    margin-top 15px


  .btn-sm
    padding-top 4px
    padding-bottom 2px

    &.btn-primary
      width 100%


  .calendar
    padding 0 15px

    .fc-toolbar
      // Hide original toolbar
      display none
      visibility hidden


  .card-title
    padding 0

    h3
      margin 20px 0 0 0

    h6
      margin 0

    p
      text-align right


  .date-info p
    text-align right
