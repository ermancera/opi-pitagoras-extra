$btn-bg = #eaeff5

.calendar
  i.glyphicon
    display inline-block
    font normal normal normal 14px/1 FontAwesome
    font-size inherit
    text-rendering auto
    font-smoothing antialiased

    &.glyphicon-chevron-left:before
      content '\f053'

    &.glyphicon-chevron-right:before
      content '\f054'

  table
    width 100%

    td > button
      height 30px

    th > button
      width 100%

    .btn
      background-color $btn-bg
      border none
      border-right 1px solid #ddd
      border-top 1px solid #ddd
      color #000

      &:active, &:hover, &.active
        background-color darken($btn-bg, 5%)
        border-color darken($btn-bg, 5%)

        i, span, strong
          color #000

          &.text-muted
            color #999

  .well
    background none
    border none
    padding 0
