accordion
  .panel
    box-shadow 0 0 8px rgba(0,0,0,0.2) inset
    min-height 24px

    h3, h6
      user-select text

    h3:first-child
      margin-bottom 0

    h6:first-child
      margin-top 0

    .panel-heading
      &:hover
        box-shadow rgba(0,0,0,0.2) 0px 2px 5px, inset rgba(0,0,0,0.2) 0px -1px 1px

      min-height 24px
      padding 0

      .btn-group
        margin-top -5px

      .btn-xs
        line-height 1
        padding 0 3px

      .col-xs-1, .col-xs-2
        font-size smaller

      .col-xs-3
        font-weight bold

      .row
        padding 5px 0 4px 5px

  .col-sm-2
    margin-top 2px

  .col-sm-3
    &:first-child
      margin-top 2px

    &:last-child
      text-align right

  .disabled
    color lightgray

  .glyphicon:not(:last-child)
    padding 0 25px 0 0

  .panel-title
    font-size 14px !important


body
  h3, h4, h6
    text-transform uppercase

  & > hr
    margin 30px 0

  cursor default
  margin 0 auto
  user-select none
  //max-width 960px


.container
  &.expanded .panel-heading
    display none
    visibility hidden

  &:not(.zoomed) .panel-collapse > .panel-body > .ng-isolate-scope
    // hack to place tabs at the bottom
    display flex
    flex-direction column-reverse

    & > *
      flex 0 0 auto


.header
  .btn-link.btn-xs
    padding 0


.legend
  .col-xs-3
    .col-xs-1
      height 20px

    .comprometido
      background-color blue

    .devengado
      background-color blue

    .pagado
      background-color blue

    .por-ejercer
      background-color blue

.nav-tabs
  .glyphicon
    padding 0 5px 0 0

  li
    font-size 12px


.nav, .pagination, .carousel, .panel-title a
  cursor pointer


.progress
  height 19px !important
  border none !important

  .progress-bar
    line-height inherit !important

  &.small
    margin-bottom inherit !important


.zoomed
  .panel-collapse.collapse.in
    height 100% !important
