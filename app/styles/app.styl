accordion
  .col-sm-3:last-child
    text-align right

  .disabled
    color lightgray

  .glyphicon:not(:last-child)
    padding 0 25px 0 0

  .panel-title
    font-size 14px !important


body
  margin 0 auto
  //max-width 960px

  & > hr
    margin 30px 0


.panel-collapse > .panel-body > .ng-isolate-scope
  // hack to place tabs at the bottom
  display flex
  flex-direction column-reverse

  & > *
    flex 0 0 auto


.nav-tabs
  .glyphicon
    padding 0 5px 0 0

  li
    font-size 12px

.btn-group, .btn-group-vertical
  width: 100%

  .pill
    width 20%


.btn-huge
  width 100%

  i
    font-size 12em
    text-align center

  p
    font-size 2em


.modal-header
  background inherit !important


.nav, .pagination, .carousel, .panel-title a
  cursor pointer


.progress
  height 15px !important
  padding inherit !important
  border none !important


  &.small
    margin-bottom inherit !important
