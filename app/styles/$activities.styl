//- Activities view


.activities
  .jumbotron
    border-top 2px solid #fa8d7a
    margin-top 15px
    padding inherit !important

    & > .row
      &:first-child
        border-bottom 1px solid lightgrey
        padding 5px 0

      &:nth-child(2)
        padding-top 8px

      &:last-child
        padding-bottom 10px

        h6
          margin-top 5px

      & > .col-xs-2
        margin-top 7px

      .col-xs-2, .col-xs-5
        text-align center
        //text-transform uppercase

      counter
        font-size 2em

  .legend
    margin-bottom 15px

  accordion
    .panel-group
      margin 0

      .panel + .panel:not(.open)
        margin-top inherit !important

    .progress:not(.progress-bar-por-ejercer)
      margin-top 10px

    h4
      strong
        display block
        margin-top 3px

      .small
        font-size 70%

  h3
    margin 0

  h6
    margin-bottom 0
