        i.fa(
          ng-class='{"fa-caret-down":!sort.reverse, "fa-caret-up":sort.reverse}'
          ng-show='sort.by=="budget_breakthrough"'
        )
  
  .col-xs-1
    a.btn.btn-xs.btn-link.wide(ng-click='sortBy("completed_goals")')
