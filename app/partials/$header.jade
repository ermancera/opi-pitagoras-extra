        i.fa(
          ng-class='{"fa-caret-down":!sort.reverse, "fa-caret-up":sort.reverse}'
          ng-show='sort.by=="completed_goals"'
        )
  
  .col-xs-1
    a.btn.btn-xs.btn-link(ng-click='sortBy("total_of_beneficiaries")')
      span.small.upper Beneficiarios
        i.fa(
          ng-class='{"fa-caret-down":!sort.reverse, "fa-caret-up":sort.reverse}'
