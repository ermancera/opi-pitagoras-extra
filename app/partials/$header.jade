.row
  .col-xs-2
    a.btn.btn-xs.btn-link(ng-click='sortBy("user_key")')
      span.small.upper Código
        i.fa(
          ng-class='{"fa-caret-down":!sort.reverse, "fa-caret-up":sort.reverse}'
          ng-show='sort.by=="user_key"'
        )
  
  .col-xs-2
    a.btn.btn-xs.btn-link(ng-click='sortBy("admin2")')
      span.small.upper Municipio
        i.fa(
          ng-class='{"fa-caret-down":!sort.reverse, "fa-caret-up":sort.reverse}'
          ng-show='sort.by=="admin2"'
        )
  
  .col-xs-2
    a.btn.btn-xs.btn-link(ng-click='sortBy("admin1")')
      span.small.upper Entidad
        i.fa(
          ng-class='{"fa-caret-down":!sort.reverse, "fa-caret-up":sort.reverse}'
          ng-show='sort.by=="admin1"'
        )
  
  .col-xs-1
    a.btn.btn-xs.btn-link(ng-click='sortBy("polygon")')
      span.small.upper Polígono
        i.fa(
          ng-class='{"fa-caret-down":!sort.reverse, "fa-caret-up":sort.reverse}'
          ng-show='sort.by=="polygon"'
        )
  
  .col-xs-1
    a.btn.btn-xs.btn-link(ng-click='sortBy("budget_breakthrough")')
