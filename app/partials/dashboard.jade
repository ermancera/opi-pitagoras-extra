.jumbotron
  .row
    .col-xs-4
      h6 Avance Global

    .col-xs-2
      .row
        span 300
      
      .row
        span Actividades
      
    .col-xs-2
      .row
        span 200
      
      .row
        span Sin Avance
    
    .col-xs-2
      .row
        span 200
      
      .row
        span En proceso
    
    .col-xs-2
      .row
        span 200
      
      .row
        span Completadas
  
  hr
  
  .row
    .col-xs-6
      h3 Presupuesto Asignado
      h3 {{100000 | currency}}

  .row
    progress
      bar(ng-repeat='bar in stacked track by $index', value='bar.value', type='{{bar.type}}')
        span(ng-hide='bar.value < 5') {{bar.value}}%

  .row.legend
    .col-xs-3
      span.badge.comprometido
      span Comprometido
      
    .col-xs-3
      span.badge.devengado
      span Devengado
    
    .col-xs-3
      span.badge.pagado
      span Pagado
    
    .col-xs-3
      span.badge.por-ejercer
      span Por ejercer

  .row
    h3 Avances

    .col-xs-6
      progressbar(value='25', type='success')
      h6 beneficiarios

    .col-xs-6
      progressbar(value='25', type='success')
      h6 metas
