.jumbotron
  .row
    .col-xs-4
      h3 Avance Global

    .col-xs-2
      .row
        span.big 300

      .row
        span Actividades

    .col-xs-2
      .row
        span.big 200

      .row
        span Sin Avance

    .col-xs-2
      .row
        span.big 200

      .row
        span En proceso

    .col-xs-2
      .row
        span.big 200
      
      .row
        span Completadas

  .row
    .col-xs-6
      h4 Presupuesto Asignado
      h4 {{activity.total_cost | currency}}

  .row
    .col-xs-12
      progress
        bar(ng-repeat='bar in stacked track by $index', value='bar.value', type='{{bar.type}}')
          span(ng-hide='bar.value < 5') {{bar.value}}%

  .row.legend
    .col-xs-3
      .row
        .col-xs-1.progress-bar.progress-bar-success
        .col-xs-2 Comprometido

    .col-xs-3
      .row
        .col-xs-1.progress-bar.progress-bar-info
        .col-xs-2 Devengado

    .col-xs-3
      .row
        .col-xs-1.progress-bar.progress-bar-warning
        .col-xs-2 Pagado

    .col-xs-3
      .row
        .col-xs-1.progress-bar.progress-bar-danger
        .col-xs-2 Por ejercer

  .row
    .col-xs-12
      h4 Avances

    .col-xs-6
      progressbar(value='benefs', type='progressType(benefs)')
      h4 beneficiarios

    .col-xs-6
      progressbar(value='goals', type='progressType(goals)')
      h4 metas
