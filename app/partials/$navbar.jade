//- Main menu bar (all views)


nav.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl')
  .navbar-inner.normal
    .container
      .navbar-header
        button.navbar-toggle.collapsed(
          ng-click='collapsed = !collapsed'
          type='button'
        )
          span.sr-only(tranlsate='TOGGLE')
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href='#/')
          include ../assets/img/logo.svg

      .collapse.navbar-collapse(collapse='collapsed')
        ul#nav-links.nav.navbar-nav(role='menu')
          li(
            ng-class='{active: isActive("/panel")}'
            role='presentation'
          )
            a.upper(href='#/panel')
              fa(name='tachometer')
              span(translate='DASHBOARD')

          li(
            ng-class='{active: isActive("/acciones")}'
            role='presentation'
          )
            a.upper(href='#/acciones')
              fa(name='flag-checkered')
              span(translate='ACTIONS')

          li(
            ng-class='{active: isActive("/archivos")}'
            role='presentation'
          )
            a.upper(href='#/archivos')
              fa(name='folder-o')
              span(translate='FILES')

        ul#nav-settings.nav.navbar-nav.navbar-right(role='menu')
          li.dropdown(role='menu')
            a.dropdown-toggle(
              data-toggle='dropdown'
              href
              role='button'
              aria-expanded=false
            ): fa(name='gear', size=2)

            ul.dropdown-menu(role='menu')
              //-li: a(href, translate='PRINT')
              //-li: a(href, translate='FULLSCREEN')
              li: a(href, ng-click='sync(true)', translate='SYNC')
              li: a(href, ng-click='toggleLang()', translate='LANG')
        //-
          li.divider-vertical

          li
            a(href='#') Reprogramar

          li
            a(href='#') Enviar informe

        //- form.navbar-form.navbar-right(role='search')
          .form-group
            .input-group
              input.form-control(placeholder='Buscar', type='text')
              .input-group-btn
                button.btn.btn-info(type='button')
                  fa(name='search')

      //- contextual header
      .header.toggle
        include activities/$header
