.panel.order-by
  .row
    .col-xs-5
      span.small Ordenar avances por 
      
      .btn-group
        button.btn.btn-sm.btn-default(
          btn-radio="'budget_breakthrough'"
          ng-model='sort.by'
        ) Presupuesto
        
        button.btn.btn-sm.btn-default(
          btn-radio="'completed_goals'"
          ng-model='sort.by'
        )  Metas
        
        button.btn.btn-sm.btn-default(
          btn-radio="'total_of_beneficiaries'"
          ng-model='sort.by'
        ) Beneficiarios 

    .col-xs-5
