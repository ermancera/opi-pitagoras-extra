//- Full calendar view

extends cards/$layout

mixin card-cal-btn-grp(label)
  button.btn.btn-default.btn-sm(
    type='button'
    btn-radio="'#{label}'"
    ng-model='calView'
  )
    span(translate=label)


mixin card-cal-btn(label)
  button.btn.btn-default.btn-sm(
    translate=label
    type='button'
  )


block title
  .col-xs-3
    h3(translate='CALENDAR')

  .col-xs-7
    .btn-toolbar.pull-right
      .btn-group
        +card-cal-btn-grp('DAILY')
        +card-cal-btn-grp('WEEKLY')
        +card-cal-btn-grp('MONTHLY')

      .btn-group
        +card-cal-btn('TODAY')
        +card-cal-btn('<')
        +card-cal-btn('>')
      
  .col-xs-2
    +card-btn-primary('date')


block content
  .calendar.col-xs-12(
    calendar='full'
    ng-model='eventSources'
    ui-calendar='calendarConfig'
  )
