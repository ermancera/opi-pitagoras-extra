.row.tools
  .col-xs-12
    button.btn.btn-primary.btn-md(
      ng-click=''
      translate='A.REPROGRAM'
      type='button'
    )
    button.btn.btn-primary.btn-md(
      ng-click=''
      translate='A.SEND'
      type='button'
    )


.row.search
  .col-xs-12
    .input-group
      input.form-control(type='text')

      .input-group-btn
        // FIXME missing assignment
        button.btn.btn-default(
          ng-click=''
          type='button'
        ) {{fullSearch? 'A.FILTER' : 'A.SEARCH' | translate}}

        button.btn.btn-default(
          ng-click='fullSearch = !fullSearch'
          type='button'
        )
          fa(name='{{ fullSearch? "chevron-up" : "chevron-down" }}')
          span.sr-only


mixin search-filter(label)
  button.btn.btn-xs.btn-default.dropdown-toggle(
    aria-expanded="false"
    data-toggle="dropdown"
    type="button"
  )
    span(translate=label)
    fa.pull-right(name='caret-down')


.row.filters(ng-show="fullSearch")
  .col-xs-3
    +search-filter('A.ENTITY')
    
  .col-xs-3
    +search-filter('A.TOWN')

  .col-xs-3
    +search-filter('A.POLY')

  .col-xs-3
    +search-filter('A.STATUS')
